  "components": {
    "schemas": {
      "TipoProdutoDTO": {
        "type": "object",
        "description": "DTO para transferência de dados de Tipo de Produto",
        "properties": {
          "id": {
            "type": "integer",
            "format": "int64",
            "description": "ID do tipo de produto",
            "example": 1
          },
          "nome": {
            "type": "string",
            "description": "Nome do tipo de produto",
            "example": "Eletrônicos",
            "minLength": 1
          }
        },
        "required": [
          "nome"
        ]
      },
      "ProdutoDTO": {
        "type": "object",
        "description": "DTO para transferência de dados de Produto",
        "properties": {
          "id": {
            "type": "integer",
            "format": "int64",
            "description": "ID do produto",
            "example": 1
          },
          "descricao": {
            "type": "string",
            "description": "Descrição do produto",
            "example": "Smartphone Samsung Galaxy S21",
            "minLength": 1
          },
          "valorFornecedor": {
            "type": "number",
            "description": "Valor do fornecedor",
            "example": 1500
          },
          "quantidadeEmEstoque": {
            "type": "integer",
            "format": "int32",
            "default": 0,
            "description": "Quantidade em estoque",
            "example": 10
          },
          "tipoProdutoId": {
            "type": "integer",
            "format": "int64",
            "description": "ID do tipo de produto",
            "example": 1
          }
        },
        "required": [
          "descricao",
          "tipoProdutoId",
          "valorFornecedor"
        ]
      },
      "MovimentoEstoque": {
        "type": "object",
        "description": "Representa um movimento de estoque (entrada ou saída)",
        "properties": {
          "id": {
            "type": "integer",
            "format": "int64",
            "description": "Identificador único do movimento de estoque (gerado automaticamente)",
            "example": 1,
            "readOnly": true
          },
          "dataMovimento": {
            "type": "string",
            "format": "date-time",
            "description": "Data e hora em que o movimento foi registrado (gerado automaticamente)",
            "example": "2023-01-01T10:00:00",
            "readOnly": true
          },
          "tipoMovimentacao": {
            "type": "string",
            "description": "Tipo de movimentação (ENTRADA aumenta o estoque, SAIDA diminui o estoque)",
            "enum": [
              "ENTRADA",
              "SAIDA"
            ],
            "example": "ENTRADA"
          },
          "quantidadeMovimentada": {
            "type": "integer",
            "format": "int32",
            "description": "Quantidade de itens movimentados (deve ser maior que zero)",
            "example": 5,
            "minimum": 1
          },
          "valorVenda": {
            "type": "number",
            "description": "Valor de venda unitário (calculado automaticamente para SAIDA como 1.35 * valorFornecedor, nulo para ENTRADA)",
            "example": 2025,
            "readOnly": true
          },
          "produtoId": {
            "type": "integer",
            "format": "int64",
            "description": "Identificador do produto associado ao movimento",
            "example": 1
          }
        },
        "required": [
          "produtoId",
          "quantidadeMovimentada",
          "tipoMovimentacao"
        ],
        "title": "Movimento de Estoque"
      },
      "ProdutoPorTipoDTO": {
        "type": "object",
        "description": "DTO para o relatório de produtos por tipo",
        "properties": {
          "id": {
            "type": "integer",
            "format": "int64",
            "description": "ID do produto",
            "example": 1
          },
          "descricao": {
            "type": "string",
            "description": "Descrição do produto",
            "example": "Smartphone Samsung Galaxy S21"
          },
          "totalSaidas": {
            "type": "integer",
            "format": "int32",
            "description": "Quantidade total de saídas",
            "example": 15
          },
          "quantidadeEmEstoque": {
            "type": "integer",
            "format": "int32",
            "description": "Quantidade em estoque",
            "example": 10
          }
        }
      },
      "LucroPorProdutoDTO": {
        "type": "object",
        "description": "DTO para o relatório de lucro por produto",
        "properties": {
          "id": {
            "type": "integer",
            "format": "int64",
            "description": "ID do produto",
            "example": 1
          },
          "descricao": {
            "type": "string",
            "description": "Descrição do produto",
            "example": "Smartphone Samsung Galaxy S21"
          },
          "totalUnidadesVendidas": {
            "type": "integer",
            "format": "int32",
            "description": "Total de unidades vendidas",
            "example": 15
          },
          "lucroTotal": {
            "type": "number",
            "description": "Lucro total",
            "example": 7500
          }
        }
      }
    }
  }
}